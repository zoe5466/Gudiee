# 資料庫配置
# 標準連接 (開發環境)
DATABASE_URL="postgresql://username:password@host:5432/guidee_db?schema=public"

# 連線池連接 (生產環境，使用 PgBouncer)
# DATABASE_URL="postgresql://username:password@pgbouncer-host:6432/guidee_db?schema=public"

# 連線池設置
# 連接超時時間 (秒)
PRISMA_QUERY_TIMEOUT=10000

# 完全禁用 Next.js 文件跟蹤以避免 micromatch 錯誤
NEXT_CONFIG_MODE=standalone
DISABLE_FILE_TRACING=true
NEXT_PRIVATE_STANDALONE_CONFIG=true

# 禁用遙測
NEXT_TELEMETRY_DISABLED=1

# 優化構建性能
# NODE_ENV should be set by npm script, not here